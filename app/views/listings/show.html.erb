<div class="row">
	<div class="col-md-6">
		<div class="thumbnail">
			<%= image_tag @listing.image.url %>
		</div>
	</div>

	<div class="col-md-6">
		<h3><%= @listing.name %></h3>
		<p><%= number_to_currency(@listing.price) %></p>
		<p><%= @listing.user.name %></p>
		<p><%= @listing.description %></p>
		<br/>
		<%= link_to "Buy It Now", new_listing_order_path(@listing), class: "btn btn-primary", style:"color:white" %>
	</div>
</div>

<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" if (user_signed_in?) && (current_user == @listing.user)  %> |
<%= link_to 'Back', listings_path, class: "btn btn-link"  %>
